.login__account
  margin-bottom 38px

.login__password
  margin-bottom 5px
  .ant-input-group-addon
    padding: 0
.login__button
  margin-top 25px
  width 346px
  height 48px
  border-radius 24px
  background-image linear-gradient(278deg, #75caff, #5394fc 0%)
  display flex
  justify-content center
  align-items center
  color white
  cursor pointer
  font-size 18px

