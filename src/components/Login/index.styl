.login
  height 100vh
  display flex
  justify-content center
  background-color #f2f2f2
  background-image url('./assets/login_bg.png')
  background-repeat no-repeat
  background-size 100vw 100vh
  align-items center
  .login-container
    position relative
  .login__card__bg
    position absolute
    bottom -10px
    right 10px
    width 382px
    height 10px
    filter blur(15px)
    background-color rgba(11,10,38,0.1)
.login__logo
  display flex
  justify-content center
  align-items center
  img
    width 345px

.login__content
  z-index 100
  width 426px
  height 438px
  background #ffffff
  border-top 6px solid #5394fc
  padding 50px 40px
  box-sizing border-box
.login__form
  margin-top 50px

